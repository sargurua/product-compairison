<h1>Products Page</h1>

<div class="products-container">
    <%= form_with model: @comparison %>
    <% @products.each do |product| %>

        <div>
            <div>

            </div>
            <div>
                <h2> <%= product.name %> </h2>
                <h3> Price: <%= product.price %> per month</h3>
                <h4> Rating: <%= product.rating %>/5 </h4>
                <h4> Category: <%= product.category %> </h4>
                <p> <%= product.description %> </p>
            </div>
        </div>

    <% end %>
</div>